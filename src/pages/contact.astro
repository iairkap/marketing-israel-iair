---
import { changeLanguage } from "i18next";
import ContactCard from "../components/ui/ContactCard.astro";
import SendUsEmail from "../components/ui/SendUsEmail.astro";
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/widgets/ContactForm.astro";
import Top from "../components/ui/Top.astro";
changeLanguage("en");

interface Props {}
---

<Layout title="Contact Form">
  <main>
    <div class="cry">
      <Top language="en" />
    </div>
    <div class="background-gradient"></div>

    <div class="container">
      <section class="left">
        <div>
          <SendUsEmail title="hola" email="iairkap@gmail.com" />
          <div>
            <ContactCard
              name="Iair Kaplun"
              title="Head of Web Development"
              href="https://www.linkedin.com/in/iair-kaplun-97145a88"
              language="en"
              picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2Flink.jpeg?alt=media&token=2eb6dde3-5115-4297-9d21-49d8d0f2adeb"
            />
            <ContactCard
              name="Javier Gandolfo"
              title="UX Lead"
              picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/javierGandolfo-linkedin.jpeg?alt=media&token=70b8ecab-6dd6-41c5-8013-0859f31edafd"
              href="https://www.linkedin.com/in/javiergandolfo/"
              language="en"
            />
          </div>
        </div>
      </section>
      <section class="right">
        <ContactForm title="Hey! Do you have a Project?" />
      </section>
    </div>
  </main>

  <style>
    main {
      width: calc(100vw - 15vw);
      margin: 0vw 7.5vw;
      height: calc(100vh - 2rem);

      @media (max-width: 768px) {
        width: 100vw;
        margin: 0;
      }
    }

    .cry {
      margin: 0vw -7.5vw;
      @media (max-width: 768px) {
        margin: 0;
      }
    }

    .right {
      @media (max-width: 768px) {
        margin-top: 5rem !important;
      }
    }

    .container {
      display: grid;
      grid-template-columns: 0.5fr 1fr;
      grid-template-areas: "left right";
      padding-left: 7.5vw;
      padding-right: 5vw;
      margin-top: 5rem;

      @media (max-width: 768px) {
        grid-template-columns: 1fr;
        grid-template-areas: "right" "left";
        padding-left: 0;
        padding-right: 0;
        gap: 2rem;
        margin-top: 4rem;
      }
    }

    .left {
      grid-area: left;
    }

    .right {
      grid-area: right;
    }
    .header {
      padding: 0 15vw;

      @media (max-width: 768px) {
        padding: 0;
      }
    }
    .left,
    .right {
      display: flex;
      flex-direction: column;
    }

    .background-gradient {
      left: 0;
      width: 100vw;
      position: absolute;
      margin-top: -350px;
      opacity: 40%;
      height: 100%;
      background: radial-gradient(
        102.91% 64.71% at 75.38% 27.65%,
        #391fffc9 0%,
        #3820f1d8 3%,
        #2e1cb9 18%,
        #241988 33%,
        #1c1660 47%,
        #161441 61%,
        #12132b 75%,
        #0f121e 88%,
        #0f121a 100%
      );
      z-index: -1;
      @media screen and (max-width: 768px) {
        display: none;
      }
    }
  </style>
</Layout>
