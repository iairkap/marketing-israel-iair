---
import { changeLanguage } from "i18next";
import ContactCard from "../../components/ui/ContactCard.astro";
import SendUsEmail from "../../components/ui/SendUsEmail.astro";
import Header from "../../components/widgets/Header.astro";
import Layout from "../../layouts/Layout.astro";
import ContactForm from "../../components/widgets/ContactForm.astro";
import Top from "../../components/ui/Top.astro";

changeLanguage("he");

interface Props {}
const language = "he";
---

<Layout title="Contact" language="he">
  <main dir="rtl">
    <div class="container">
      <section class="left">
        <div>
          <SendUsEmail
            title="hola"
            email="beyondtik.il@gmail.com"
            language="he"
          />
          <div>
            <ContactCard
              language="he"
              name="יאיר קפלון"
              title="Head of Web Development"
              href="https://www.linkedin.com/in/iair-kaplun-97145a88"
              picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2Flink.jpeg?alt=media&token=2eb6dde3-5115-4297-9d21-49d8d0f2adeb"
            />
            <ContactCard
              language="he"
              name="חביאר גנדולפו"
              title="UX Lead"
              picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/javierGandolfo-linkedin.jpeg?alt=media&token=70b8ecab-6dd6-41c5-8013-0859f31edafd"
              href="https://www.linkedin.com/in/javiergandolfo/"
            />
          </div>
        </div>
      </section>
      <section class="right">
        <ContactForm title="שלום! יש לך פרויקט?" language="he" />
      </section>
    </div>
  </main>
</Layout>

<style>
  main {
    width: 100vw;
    color: white;
    font-size: 20px;
    line-height: 1.6;

    @media (max-width: 768px) {
      padding: 0 0 !important;
      width: 100vw;
    }
  }

  main {
    margin: auto;
    width: 100vw;
    color: white;
    font-size: 20px;
    line-height: 1.6;
    @media (max-width: 768px) {
      padding: 0 0;
    }
  }

  .cry {
    margin-top: 5rem;
    @media screen and (max-width: 768px) {
      display: flex;
      width: 190vw;
      margin-right: 2rem;
    }
  }
  .right {
    @media (max-width: 768px) {
      margin-top: 5rem !important;
    }
  }

  .container {
    display: grid;
    grid-template-columns: 0.5fr 1fr;
    grid-template-areas: "left right";
    padding-right: 15vw;
    padding-left: 5vw;
    height: 100%;
    margin-top: 5rem;
    margin-right: 4vw;
    @media (max-width: 768px) {
      grid-template-columns: 1fr;
      grid-template-areas: "right" "left";
      padding-right: 0;
      gap: 2rem;
      padding-right: 6vw;
      margin-top: 0;
    }
  }

  .left {
    grid-area: left;
  }

  .right {
    grid-area: right;
  }
  .header {
    padding: 0 15vw;

    @media (max-width: 768px) {
      padding: 0;
    }
  }
  .left,
  .right {
    display: flex;
    flex-direction: column;
  }

  @media screen and (max-width: 768px) {
    display: none;
  }
</style>
