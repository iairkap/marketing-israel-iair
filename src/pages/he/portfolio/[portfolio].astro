---
import { changeLanguage } from "i18next";
import Header from "../../../components/widgets/Header.astro";
import Layout from "../../../layouts/Layout.astro";
import Loader from "../../../components/ui/Loader.astro";

changeLanguage("he");

let iframeSrc = "";
const currentPath = Astro.url.pathname;
switch (currentPath) {
    case "/portfolio/Real%20Cover":
        iframeSrc = "https://realcover-iairkap.vercel.app/";
        break;
    case "/portfolio/Resi-Lense":
        iframeSrc = "https://resilense.com/";
        break;
    case "/portfolio/Talent%20Tech%20Hub":
        iframeSrc =
            "https://tech-talent-hub-actual-git-develop-equipo3henry.vercel.app/";
        break;
}
---

<Layout title="portfolio">
  <article
    style={{
      display: "flex",
      flexDirection: "column",
      height: "100vh",
      width: "100vw",
    }}
  >
    <div style={{ padding: "0 15vw", marginBottom: "2rem" }}>
      <Header />
    </div>
    <iframe
      id="iframe"
      src={iframeSrc}
      frameborder="0"
      width="85%"
      height="80%"
      style={{ border: "none", alignSelf: "center" }}></iframe>
  </article>
</Layout>
