---
import RealCover from "../../RealCover.jpg";
import { Image } from "astro:assets";
interface Props {
  picture?: string;
  name: string;
  description?: string;
  github?: string;
  url?: string;
  class?: string;
}

const {
  picture,
  name,
  description,
  github,
  url,
  class: className,
} = Astro.props;
---

<div class={`container ${className}`}>
  <h4 class="card-name">+</h4>
  <h4 class="card-name">{name}</h4>
  <div class="background-container">
    {
      name === "Real Cover" && (
        <Image src={RealCover} alt={name} class="cover-image" />
      )
    }
  </div>
</div>

<style>
  .container {
    position: relative;

    background-color: #3a1fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  .container.taller {
    height: 393px;
    border-radius: 8px;
    width: 100%;
  }
  .container.smaller {
    height: 343px;
    border-radius: 8px;
    width: 100%;
  }

  .background-container {
    border-radius: 8px;
    position: absolute;
    top: 0;
    left: 0;

    display: flex;
    align-items: center;
    justify-self: center;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .background-container:hover {
    opacity: 0;
  }
  .cover-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-name {
    opacity: 0;
    transform: translateY(-20px);
    transition:
      opacity 0.3s ease-in-out,
      transform 0.3s ease-in-out;
  }

  .container:hover .card-name {
    opacity: 1;
    transform: translateY(0);
  }
</style>
