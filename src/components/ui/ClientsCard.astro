---
import StarsContainer from "./StarsContainer.astro";
import RealCoverPic from "../../realcoverpic.jpeg";
import { Image } from "astro:assets";

interface Props {
  name: string;
  review: string;
  compnayName: string;
  picture?: string;
}

const { name, review, compnayName, picture } = Astro.props;
---

<article>
  <div class="container">
    <div class="izq">
      <div class="image-container">
        {
          name === "Fabian Feldman" && (
            <img src={picture} alt="Real Cover Pic" />
          )
        }
        {
          name === "Natalia Malvicino" && (
            <img src={picture} alt="Talent Tech" />
          )
        }
        {name === "Nira Kaplansky" && <img src={picture} alt="Talent Tech" />}
      </div>
    </div>
    <div class="der">
      <div class="starsContainer">
        <StarsContainer /> 5.0
      </div>
      <p>{review}</p>
      <h2>
        {name}, <span>
          {compnayName}
        </span>
      </h2>
    </div>
  </div>
</article>

<style>
  .container {
    background: #1b1f272a;
    padding: 70px;
    margin-bottom: 1rem;
    border-radius: 8px;
    display: flex;
    flex-direction: row;
    gap: 3rem;
    align-items: center;
    border: 1px solid transparent; /* Añade un borde transparente */
    transition: all 0.2s ease-in-out; /* Añade una transición al borde */
  }

  .container:hover {
    border: 1px solid #3a1fff;
    background: #1b1f27;
  }

  .starsContainer {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .image-container {
    width: 200px;
    height: 256px;
    border-radius: 8px;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  p {
    font-size: 1rem;
  }

  h2 {
    font-size: 1rem;
  }
  span {
    font-weight: 300;
  }
</style>
