---
import WorkCard from "../ui/WorkCard.astro";
import he from "../../../public/locales/he/translation.json";
import en from "../../../public/locales/en/translation.json";

const { title, button, language } = Astro.props;
interface Props {
  title: string;
  button?: string;
  language: string;
}

const t = language === "he" ? he : en;
---

<article style={{ direction: language === "he" ? "rtl" : "ltr" }}>
  <h1>{title}</h1>
  <div
    class="work-container"
    style={{ flexDirection: language === "he" ? "row-reverse" : "row" }}
  >
    <div class="container-column sweepToRight">
      <WorkCard
        language={language}
        name="Resi-Lense"
        class="smaller"
        description={t.portfolio.resilenseDescription}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2FResilense.png?alt=media&token=d99b1f74-5f9e-4daa-9202-2dd388d38110"
      />

      <WorkCard
        language={language}
        name="Real Cover"
        class="smaller"
        picture="RealCover"
        description={t.portfolio.realCoverDescription}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2FRealCover.jpg?alt=media&token=34ba40a6-76b1-4498-a355-b4195f56eefb"
        iframe="https://realcover-iairkap.vercel.app/"
      />
      <WorkCard
        language={language}
        name="Conectemos"
        class="smaller"
        picture="Conectemos"
        description={t.portfolio.conectemos}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/Light%20theme.png?alt=media&token=970d1080-23e3-46da-bdff-1340406db006"
        iframe="https://realcover-iairkap.vercel.app/"
      />
      <WorkCard
        language={language}
        name="Trinka"
        class="smaller"
        picture="Conectemos"
        description={t.portfolio.trinka}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/Trinka.png?alt=media&token=277db921-5c39-4fc7-b7a5-9efbaada71be"
        iframe="https://realcover-iairkap.vercel.app/"
      />
    </div>
    <div class="container-column sweepToLeft">
      <WorkCard
        language={language}
        name="Javaia"
        class="taller"
        description={t.portfolio.javaiaDescription}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2Fjavaia.png?alt=media&token=3b17b677-58a0-45e0-a638-8c3971c0421c"
      />
      <WorkCard
        language={language}
        name="Olivera"
        class="taller"
        description={t.portfolio.talentTechHub}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/phone%20javi.png?alt=media&token=ee12edce-8262-4c25-b920-38cfa2675a5d"
      />
      <WorkCard
        language={language}
        name="Talent Tech Hub"
        class="taller"
        description={t.portfolio.trinka}
        picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2FTalentTech.jpeg?alt=media&token=95aa054b-6b04-4fdd-aee4-ff9d00c3fb1d"
      />
    </div>
  </div>
</article>

<style>
  .work-container {
    display: flex;
    flex-direction: row;
    gap: 1rem;
    height: 100%;
    width: 100%;
    @media screen and (max-width: 1053px) {
      flex-direction: column !important;
    }
  }

  .container-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  h1 {
    @media (max-width: 768px) {
      font-size: 1.5rem;
      text-align: center;
    }
  }

  article {
    @media (max-width: 768px) {
      padding: 0 1rem;
      margin-top: 5rem;
    }
  }
</style>
