---
import Form from "../ui/Form.jsx";
interface Props {
  title: string;
  language?: string;
}

const { title, language } = Astro.props;
---

<article>
  <h1>{title}</h1>
  <Form client:idle language={language} />
</article>

<style>
  article {
    color: white;
  }
  h1 {
    font-size: 3rem;
    font-weight: 900;
    margin: 0;
    padding: 0;
  }
</style>
