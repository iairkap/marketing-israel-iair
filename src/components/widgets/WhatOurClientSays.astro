---
import ClientsCard from "../ui/ClientsCard.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<article class="sweepToTop">
  <div class="izquierda">
    <h2>{title}</h2>
  </div>
  <div class="derecha">
    <ClientsCard
      name="Fabian Feldman"
      review="WebAviv consistently delivers top-notch quality in everything they create, from their innovative designs to their meticulously crafted code. Working with them has been a fantastic experience, and their commitment to enterprise-grade excellence shines through in every aspect of their work!"
      compnayName="CEO Real Cover"
      picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2Frealcoverpic.jpeg?alt=media&token=f2355e58-4083-48a5-b0a1-ff455e1aa36b"
    />
    <ClientsCard
      name="Natalia Malvicino"
      review=" WebAviv's commitment to excellence, coupled with their fantastic teamwork, has truly made this partnership a success. The project reflects not only their technical expertise but also their dedication to fostering global work connections. Kudos to WebAviv for a fantastic collaboration!"
      compnayName="Talent Tech Hub"
      picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2F1702656299277.jpeg?alt=media&token=d5fa0419-a9c1-4501-b332-3036fe4148da"
    />
    <ClientsCard
      name="Nira Kaplansky"
      review=" WebAviv's commitment to excellence, coupled with their fantastic teamwork, has truly made this partnership a success. The project reflects not only their technical expertise but also their dedication to fostering global work connections. Kudos to WebAviv for a fantastic collaboration!"
      compnayName="Resi-Lense"
      picture="https://firebasestorage.googleapis.com/v0/b/real-cover.appspot.com/o/iair%2F1516566008920.jpeg?alt=media&token=916e6d18-f68d-45e8-88db-14a4ec305c7f"
    />
  </div>
</article>

<style>
  article {
    padding-top: 3rem;
    display: flex;
    flex-direction: row;
    min-height: 100vh;
    @media screen and (max-width: 768px) {
      flex-direction: column;
    }
  }
  .izquierda {
    padding-top: 3rem;
    min-width: 25%;
    position: sticky;
    top: 0;
    max-height: 30vh;
    @media screen and (max-width: 768px) {
      position: relative;
    }
  }
</style>

