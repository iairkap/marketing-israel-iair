---
import ButtonSwitchLanguage from "../ui/ButtonSwitchLanguage";
import ButtonsNav from "../ui/ButtonsNav.astro";
import LanguageSelector from "../ui/LanguageSelector.astro";
import Loader from "../ui/Loader.astro";
import i18next, { t, changeLanguage } from "i18next";

let currentLanguage = i18next.language;

interface Props {
  language?: string;
}

const { language } = Astro.props;
---

<nav class="navbar" dir={language === "he" ? "rtl" : "ltr"}>
  <div>
    <a href="/">
      <h4>
        <span class="logo only-desktop">
          <Loader />
        </span>
      </h4>
    </a>
  </div>
  <div class="navbar-right">
    <div class="only-desktop">
      <ButtonsNav language={language} />
    </div>
  </div>
</nav>

<style>
  .only-desktop {
    @media screen and (max-width: 768px) {
      display: none;
    }
  }
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 100;
    margin-top: 2rem;
    position: sticky;
    @media screen and (max-width: 768px) {
      width: 100vw !important;
      margin-top: 0;
      margin-bottom: none;
      align-items: center;
    }
  }

  .navbar-right {
    display: flex;
    align-items: center;
  }

  .hamburger-button {
    display: none;
    font-size: 2.5rem;
    background-color: transparent;
    border: none;
    color: rgb(184, 184, 184);
    justify-self: flex-end;
  }
  .logo {
    color: white;
  }
  @media (max-width: 768px) {
    .navbar {
      flex-direction: column;
      align-items: center;
      transform: scale(1);
      padding: -8px;
      margin-top: -2rem;
    }

    .hamburger-button {
      display: block;
    }
  }

  a {
    text-decoration: none;
  }
</style>
